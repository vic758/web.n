<section id="play">
  <div class="game-card">
    <h2>Neon Dodge</h2>
    <p>Controls: ‚Üê ‚Üí or A / D</p>
    <canvas id="gameCanvas" width="400" height="600"></canvas>
  </div>
</section>

<footer>
  <p>&copy; 2025 Game Hub | Built for fun üéÆ</p>
</footer>

<script>
const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");

let player = { x:180, y:520, size:40, speed:6 };
let enemies = [];
let score = 0;
let gameOver = false;

document.addEventListener("keydown", e => {
  if (e.key === "ArrowLeft" || e.key === "a") player.x -= player.speed;
  if (e.key === "ArrowRight" || e.key === "d") player.x += player.speed;
});

function spawnEnemy() {
  enemies.push({
    x: Math.random() * (canvas.width - 40),
    y: -40,
    size: 40,
    speed: 3 + score * 0.02
  });
}

function gameLoop() {
  if (gameOver) {
    ctx.fillStyle = "white";
    ctx.font = "30px Arial";
    ctx.fillText("GAME OVER", 110, 300);
    ctx.font = "20px Arial";
    ctx.fillText("Score: " + score, 150, 340);
    return;
  }

  ctx.clearRect(0, 0, canvas.width, canvas.height);

  ctx.fillStyle = "#00ffcc";
  ctx.fillRect(player.x, player.y, player.size, player.size);

  ctx.fillStyle = "red";
  enemies.forEach(e => {
    e.y += e.speed;
    ctx.fillRect(e.x, e.y, e.size, e.size);

    if (
      e.x < player.x + player.size &&
      e.x + e.size > player.x &&
      e.y < player.y + player.size &&
      e.y + e.size > player.y
    ) {
      gameOver = true;
    }
  });

  enemies = enemies.filter(e => e.y < canvas.height);
  score++;
  ctx.fillStyle = "white";
  ctx.fillText("Score: " + score, 10, 20);

  if (Math.random() < 0.03) spawnEnemy();
  requestAnimationFrame(gameLoop);
}

gameLoop();
</script>

